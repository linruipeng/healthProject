<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bukaedu.dao.CheckItemDao">
    <insert id="add" parameterType="pojo.CheckItem">
        insert into
            t_checkitem(code,name,sex,age,price,type,remark,attention)
            values (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </insert>
    <select id="selectByCondition" parameterType="string" resultType="pojo.CheckItem">
        select * from t_checkitem
        <if test="queryString!=null and queryString.length>0">
            where code = #{queryString} or name = #{queryString}
        </if>
    </select>

    <delete id="delete" parameterType="int">
        delete from t_checkitem where id=#{id}
    </delete>
    
    <select id="findCountByCheckItemId" resultType="long" parameterType="int">
        select count(*) from t_checkgroup_checkitem where checkitem_id=#{checkitem_id}
    </select>

    <select id="findById" parameterType="int" resultType="pojo.CheckItem">
        select * from t_checkitem where id=#{id}
    </select>
    <update id="edit" parameterType="pojo.CheckItem">
        update t_checkitem
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="code!=null">
                code=#{code},
            </if>
            <if test="sex!=null">
                sex=#{sex},
            </if>
            <if test="age!=null">
                age=#{age},
            </if>
            <if test="price!=null">
                price=#{price},
            </if>
            <if test="type!=null">
                type=#{type},
            </if>
            <if test="remark!=null">
                remark=#{remark},
            </if>
            <if test="attention!=null">
                attention=#{attention},
            </if>
        </set>
        where id=#{id}
    </update>

    <select id="findAll" resultType="pojo.CheckItem">
        select * from t_checkitem
    </select>
</mapper>
